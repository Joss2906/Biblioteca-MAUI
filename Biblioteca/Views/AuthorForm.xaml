<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biblioteca.Views.AuthorForm"
             Title="{Binding Title}">
    <StackLayout 
        VerticalOptions="CenterAndExpand"
        Margin="15"
        Padding="15">

        <ActivityIndicator 
        IsVisible="{Binding LoadingIsVisible}"
        IsRunning="{Binding LoadingIsVisible}"
        Color="Blue"
        HeightRequest="30"/>

        <Label Text="Nombre"/>
        <Entry Text="{Binding Author.Name}" Margin="0,0,0,10"/>

        <Label Text="Apellido"/>
        <Entry Text="{Binding Author.Lastname}" Margin="0,0,0,10"/>

        <Label Text="Direccion"/>
        <Entry Text="{Binding Author.Address}" Margin="0,0,0,10"/>

        <Label Text="Ciudad"/>
        <Entry Text="{Binding Author.City}" Margin="0,0,0,10"/>

        <Button Text="Guardar" Command="{Binding SaveCommand}" BackgroundColor="Green"/>


    </StackLayout>
</ContentPage>