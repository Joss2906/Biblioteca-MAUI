<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biblioteca.Views.LoanForm"
             Title="{Binding Title}">
    <StackLayout 
        VerticalOptions="CenterAndExpand"
        Margin="15"
        Padding="15">

        <ActivityIndicator 
        IsVisible="{Binding LoadingIsVisible}"
        IsRunning="{Binding LoadingIsVisible}"
        Color="Blue"
        HeightRequest="30"/>

        <Label Text="Libro"/>
        <Picker Title="Seleccionar libro"
            ItemsSource="{Binding Books}"
            SelectedItem="{Binding SelectedBook}"
            ItemDisplayBinding="{Binding Title}"/>

        <Label Text="Usuario"/>
        <Picker Title="Seleccionar usuario"
            ItemsSource="{Binding Users}"
            SelectedItem="{Binding SelectedUser}"
            ItemDisplayBinding="{Binding Name}"
                />

        <Label Text="Estatus"/>
        <Entry Text="{Binding Loan.Status}" Margin="0,0,0,10"/>

        <Button Text="Guardar" Command="{Binding SaveCommand}" BackgroundColor="Green"/>


    </StackLayout>
</ContentPage>